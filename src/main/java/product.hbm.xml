<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.daidonef.pointofsale.Product" table="product">
	<id name="productID" column="productid" type="int">
		<generator class="increment"></generator>
	</id>
	<property name="name" column="name" type="String"></property>
	<property name="price" column="price" type="double"></property>
	<property name="type" column="type" type="String"></property>
	<property name="description" column="description" type="String"></property>
	
</class>
</hibernate-mapping>